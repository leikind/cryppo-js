{
  "name": "@meeco/cryppo",
  "version": "0.3.3",
  "description": "In-browser encryption and decryption. Clone of Ruby Cryppo",
  "scripts": {
    "browser": "karma start",
    "build": "rm -rf dist && tsc && bili src/index.ts --format cjs --format es --module-name cryppo",
    "demo": "npm start",
    "lint": "tslint --project tsconfig.json",
    "prebuild": "npm run lint",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "start": "parcel serve demo/index.html",
    "test": "jest"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@bitbucket-nf:meeco/cryppo-js.git"
  },
  "keywords": [
    "encryption",
    "cryppo",
    "decryption",
    "rsa",
    "pbkdf2",
    "aes",
    "aes-256"
  ],
  "author": "Meeco",
  "license": "MIT",
  "dependencies": {
    "node-forge": "0.8.5",
    "yaml": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node-forge": "0.8.4",
    "@types/yaml": "^1.0.2",
    "bili": "^4.8.1",
    "jasmine-core": "^3.4.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-typescript": "^4.1.0",
    "parcel-bundler": "^1.12.3",
    "sass": "^1.22.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "testMatch": [
      "(/^test/.*|\\.(test|spec))\\.(ts)$"
    ]
  }
}
